<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@drawable/menu">
    <ImageView
            android:layout_width="317dp"
            android:layout_height="398dp" app:srcCompat="@drawable/chuo"
            android:id="@+id/menuImage" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.893"/>
    <TextView
            android:layout_width="127dp"
            android:layout_height="35dp"
            android:id="@+id/menuText" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp"
            app:layout_constraintBottom_toTopOf="@+id/menuImage" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="315dp" android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginBottom="100dp" android:layout_marginTop="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>